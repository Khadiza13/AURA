<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Selfdefence">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="430dp"
        android:layout_height="65dp"
        android:background="#c71585"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:title=""
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <!-- Custom title text -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Tips and Tricks"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </androidx.appcompat.widget.Toolbar>


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:iss_auto_cycle="true"
        android:layout_marginTop="75dp"
        app:iss_corner_radius="20"
        app:iss_delay="1000"
        app:iss_period="1000">

    </com.denzcoskun.imageslider.ImageSlider>


    <ImageButton
        android:id="@+id/imgtip"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="204dp"
        android:background="#c71585"
        android:scaleType="fitCenter"
        android:src="@drawable/free_security" />

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="136dp"
        android:ems="10"
        android:inputType="text"
        android:text="Safety Tips"
        android:textColor="#c71585"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextText3"
        android:layout_width="175dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="121dp"
        android:ems="10"
        android:inputType="text"
        android:text="Self-defense videos"
        android:textColor="#c71585"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgself"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="203dp"
        android:background="#c71585"
        android:scaleType="fitCenter"
        android:src="@drawable/self_defence" />

</RelativeLayout>
